<style>
    /* Reset default styles */
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    /* Global styles */
    body {
        font-family: Arial, sans-serif;
    }

    header {
        background-color: #333;
        color: white;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    nav ul {
        display: flex;
        list-style: none;
        padding: 0;
    }

        nav ul li {
            margin-right: 10px;
        }

            nav ul li a {
                text-decoration: none;
                font-size: 20px;
                padding: 20px 10px;
                color: white;
            }

                nav ul li a.active {
                    color: black;
                    background-color: white;
                }

    section {
        padding: 30px 50px;
        display: none; /* Hide all sections by default */
    }

    table {
        border: 1px solid #ccc;
        width: 100%;
        max-height: 80vh;
        overflow-y: auto; /* Add vertical scroll if needed */
        border-collapse: collapse;
    }

    thead {
        background-color: #333;
        color: white;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ccc;
    }

    /* Show active section */
    section:target {
        display: block;
    }

</style>
<script>
    const navLinks = document.querySelectorAll('header nav ul li a');
    navLinks.forEach(link => {
        link.addEventListener('click', () => {
            navLinks.forEach(link => {
                link.classList.remove('active');
            });
            link.classList.add('active');
        });
    });

    // fetch users from http://localhost:63946/api/product/getAllProduct and add in table of customers
    fetch('http://localhost:63946/api/product/getAllProduct')
        .then(response => response.json())
        .then(data => {
            const table = document.querySelector('#admin-products table tbody');
            table.innerHTML = '';
            data.forEach(product => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${product.id}</td>
                    <td>${product.name}</td>
                    <td>${product.description}</td>
                    <td>${product.price}</td>
                `;
                table.appendChild(tr);
            });
        });

    // fetch orders from http://localhost:63946/api/bill/getBills and add in table of orders
    fetch('http://localhost:63946/api/bill/getBills')
        .then(response => response.json())
        .then(data => {
            const table = document.querySelectorAll('#admin-orders table tbody')[1];
            table.innerHTML = '';
            data.forEach(order => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${order.id}</td>
                    <td>${order.uuid}</td>
                    <td>${order.name}</td>
                    <td>${order.email}</td>
                    <td>${order.contact}</td>
                    <td>${order.paymentMethod}</td>
                    <td>${order.total}</td>
                    <td>${order.productDetail}</td>
                    <td>${order.createdBy}</td>
                `;
                table.appendChild(tr);
            });
        });

    // fetch customers from http://localhost:63946/api/user/getAllUser and add in table of customers
    fetch('http://localhost:63946/api/user/getAllUser')
        .then(response => response.json())
        .then(data => {
            const table = document.querySelectorAll('#admin-users table tbody')[2];
            table.innerHTML = '';
            data.forEach(customer => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${customer.id}</td>
                    <td>${customer.name}</td>
                    <td>${customer.contact}</td>
                    <td>${customer.email}</td>
                `;
                table.appendChild(tr);
            });
        });

</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coffee Shop Administration</title>

</head>

<style>
    * {
        padding: 0px;
        margin: 0px;
    }

    header {
        background-color: #333;
        color: white;
        padding: 10px 20px;
    }

        header nav ul li a {
            text-decoration: none;
            font-size: 20px;
            padding: 20px 10px;
            margin-left: 20px;
            color: white;
        }

            header nav ul li a.active {
                color: black;
                background-color: white;
            }

    section {
        padding: 30px 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    table {
        border: 1px solid;
        width: 80%;
        max-height: 80vh;
        padding: 0px;
        text-align: left;
        border-collapse: collapse;
    }

    thead {
        background-color: #333;
        color: white;
    }

    td, th {
        border: none;
        padding: 10px;
    }
</style>

<body>
    <div class="main-container">
        <!-- header -->
        <header style="display: flex; justify-content: space-between; align-items: center;">
            <h1 style="margin: 0;">Coffee Shop Administration</h1>
            <nav>
                <ul style="display: flex; list-style: none; padding: 0;">
                    <li style="margin-right: 10px;"><a href="#admin-products" id="productBtn" class="active">Products</a></li>
                    <li style="margin-right: 10px;"><a href="#admin-orders" id="orderBtn">Orders</a></li>
                    <li><a href="#admin-customers">Customers</a></li>
                </ul>
            </nav>
        </header>
        <!-- main content -->
        <!-- products -->
        <section id="admin-products">

            <div class="add-product">
                <p>Add product</p>
                <button id="openForm">Add</button>
            </div>

            <div id="overlay" class="overlay">
                <div class="overlay-content">
                    <span class="close">&times;</span>
                    <h2>Add New Product</h2>
                    <form id="productForm">
                        <label for="productId">ID:</label>
                        <input type="text" id="productId" name="productId" required><br>
                        <label for="productName">Name:</label>
                        <input type="text" id="productName" name="productName" required><br>
                        <label for="productDescription">Description:</label>
                        <textarea id="productDescription" name="productDescription" required></textarea><br>
                        <label for="productPrice">Price:</label>
                        <input type="number" id="productPrice" name="productPrice" required><br>
                        <label for="productCategory">Category Name:</label>
                        <select id="productCategory" name="productCategory" required>
                            <!-- Categories will be populated dynamically using JavaScript -->
                        </select><br>
                        <button type="submit">Add</button>
                    </form>
                </div>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </section>
        <!-- orders -->
        <section id="admin-orders">

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>UUID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>PaymentMethod</th>
                        <th>Total</th>
                        <th>Product detail</th>
                        <th>Created by</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </section>
        <!-- customers -->
        <section id="admin-customers">

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>
<style>
    /* Reset default styles */
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    /* Global styles */
    body {
        font-family: Arial, sans-serif;
    }

    header {
        background-color: #333;
        color: white;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    nav ul {
        display: flex;
        list-style: none;
        padding: 0;
    }

        nav ul li {
            margin-right: 10px;
        }

            nav ul li a {
                text-decoration: none;
                font-size: 20px;
                padding: 20px 10px;
                color: white;
            }

                nav ul li a.active {
                    color: black;
                    background-color: white;
                }

    section {
        padding: 30px 50px;
        display: none; /* Hide all sections by default */
    }

    table {
        border: 1px solid #ccc;
        width: 100%;
        max-height: 80vh;
        overflow-y: auto; /* Add vertical scroll if needed */
        border-collapse: collapse;
    }

    thead {
        background-color: #333;
        color: white;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ccc;
    }

    /* Show active section */
    section:target {
        display: block;
    }

    .add-product{
        display: flex;
        justify-content: left;
        gap: 20px;
        margin-bottom: 20px;
        align-items: center;
    }
    .add-product button{
        padding: 5px 30px;
        background: #333;
        color : white;
        font-size: 20px;
        border-radius: 15px;
    }

    /* overlay css*/
    /* Overlay styles */
    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
        z-index: 1000; /* Ensure it appears above other elements */
    }

    .overlay-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 20px;
        cursor: pointer;
    }

    /* Form styles */
    form {
        margin-top: 10px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"],
    button[type="submit"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    button[type="submit"] {
        background-color: #4CAF50; /* Green */
        color: white;
        border: none;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #45a049; /* Darker green on hover */
        }

</style>

<script src="@Url.Content("/Content/admin.js")" type="text/javascript"></script>
